
          <div class="grid grid-cols-3 gap-4">
  <div class="bg-gray-100 p-4">
    <!-- Tasks for Today -->
    <h2 class="text-lg font-bold mb-4">Tasks for Today</h2>
    <ul class="space-y-4">
      <% @tasks_due_today.each do |task| %>
        <li class="text-gray-800"><%= task.title %></li>
      <% end %>
    </ul>
  </div>

  <div class="bg-white p-4">
    <!-- Tasks Index -->
    <h2 class="text-lg font-bold mb-4">All Tasks</h2>
    <ul class="space-y-4">
      <% @tasks.each do |task| %>
        <li class="text-gray-800"><%= task.title %></li>
      <% end %>
    </ul>
  </div>

  <div class="bg-gray-100 p-4">
    <!-- Categories Index -->
    <h2 class="text-lg font-bold mb-4">Categories</h2>
    <ul class="space-y-4">
      <% @categories.each do |category| %>
        <li class="text-gray-800"><%= category.name %></li>
      <% end %>
    </ul>
  </div>
</div>