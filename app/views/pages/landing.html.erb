<!-- app/views/pages/landing.html.erb -->
<div class="h-screen w-screen flex flex-col">
  <header class="p-6 flex justify-between items-center bg-indigo-900 text-white">
  <h1 class="text-2xl font-bold">ChronoMemo</h1>

  <nav class="flex items-center space-x-4">
    <%= link_to "Log in",
                new_user_session_path,
                class: "hover:underline px-2 py-1" %>

    <%= link_to "Sign up",
                new_user_registration_path,
                class: "bg-white text-indigo-900 px-4 py-1 rounded-lg" %>

    <%= link_to "https://x.com/your_x_handle",
                target: "_blank",
                rel: "noopener",
                class: "inline-flex items-center rounded-lg bg-white bg-opacity-10 hover:bg-opacity-20" do %>
      <%= image_tag "ximg.png",
                    alt: "@your_x_handle",
                    class: "h-10 w-10" %>
    <% end %>
  </nav>
</header>

  <main class="flex-grow bg-indigo-800 text-white">
  <div class="container mx-auto flex flex-col-reverse lg:flex-row items-center py-16 px-6 lg:px-0">
    <!-- Text column -->
    <div class="w-full lg:w-1/2 text-center lg:text-left space-y-6">
      <h2 class="text-4xl lg:text-5xl font-extrabold leading-tight">
        Turn messy thoughts into actionable notes.
      </h2>
      <p class="text-lg lg:text-xl text-indigo-200">
        Jot down, organize, and track your to-dos—faster than ever.
      </p>
      <div class="space-x-4">
        <%= link_to "Get Started", new_user_registration_path,
            class: "bg-gradient-to-r from-pink-500 to-blue-500 px-6 py-3 rounded-full text-lg font-medium shadow-lg hover:opacity-90 transition" %>
        <%= link_to "Learn More", "#features",
            class: "underline text-indigo-200 hover:text-white transition" %>
      </div>
    </div>

    <!-- Illustration column -->
     <div class="w-full lg:w-1/2 mb-12 lg:mb-0 flex justify-center">
      <div class="relative w-full" style="padding-top:56.25%;"> 
        <iframe
          class="absolute top-0 left-0 w-full h-full rounded-xl shadow-2xl"
          src="https://www.youtube.com/embed/s4VpdOdd3wU?rel=0"
          title="ChronoMemo demo"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      </div>
    </div>
  </div>
</main>

<!-- Optional: Features section below -->
<section id="features" class="bg-indigo-900 text-white py-16">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 px-6 lg:px-0">
    <div class="space-y-4 text-center">
      <svg class="mx-auto h-10 w-10 text-pink-400" /* … */></svg>
      <h3 class="text-xl font-semibold">Quick Capture</h3>
      <p class="text-indigo-300">Rapidly jot down ideas & tasks from anywhere.</p>
    </div>
    <div class="space-y-4 text-center">
      <svg class="mx-auto h-10 w-10 text-blue-400" /* … */></svg>
      <h3 class="text-xl font-semibold">Smart Reminders</h3>
      <p class="text-indigo-300">Never miss a deadline with automated alerts.</p>
    </div>
    <div class="space-y-4 text-center">
      <svg class="mx-auto h-10 w-10 text-green-400" /* … */></svg>
      <h3 class="text-xl font-semibold">Insightful Reports</h3>
      <p class="text-indigo-300">Track your productivity over time.</p>
    </div>
  </div>
</section>

  <footer class="p-4 bg-indigo-900 text-center text-sm text-gray-300">
    © <%= Time.current.year %> ChronoMemo. All rights reserved.
  </footer>
</div>
